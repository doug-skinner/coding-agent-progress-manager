{
  "name": "@dougskinner/coding-agent-progress-manager",
  "version": "1.0.0",
  "description": "CLI tool for tracking lightweight requirements and progress across coding agent runs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "cap-manager": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "agent_prompt.txt"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/doug-skinner/coding-agent-progress-manager.git"
  },
  "keywords": [
    "cli",
    "progress-tracking",
    "requirements",
    "coding-agent",
    "project-management",
    "automation",
    "workflow",
    "typescript"
  ],
  "author": "Doug Skinner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doug-skinner/coding-agent-progress-manager/issues"
  },
  "homepage": "https://github.com/doug-skinner/coding-agent-progress-manager#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3"
  }
}
